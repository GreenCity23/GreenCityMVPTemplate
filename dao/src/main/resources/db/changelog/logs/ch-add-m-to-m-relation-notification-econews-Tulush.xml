<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-notification_econewscomment" author="your_author_name">
        <createTable tableName="notification_econews_comment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="notification_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="econews_comment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint
                baseTableName="notification_econews_comment"
                baseColumnNames="notification_id"
                constraintName="fk_notification_econews_comment_notification"
                referencedTableName="notifications"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
        <addForeignKeyConstraint
                baseTableName="notification_econews_comment"
                baseColumnNames="econews_comment_id"
                constraintName="fk_notification_econews_comment_econews_comment"
                referencedTableName="econews_comment"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />

    </changeSet>

</databaseChangeLog>