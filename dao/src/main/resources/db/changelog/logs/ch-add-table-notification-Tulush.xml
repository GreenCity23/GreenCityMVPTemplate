<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-notification-table" author="Tulush">
        <createTable tableName="notifications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="creation_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="source_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-sender" author="Tulush">
        <addForeignKeyConstraint
                baseTableName="notifications"
                baseColumnNames="sender_id"
                constraintName="fk_notification_sender"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>

    <changeSet id="create-notified-users-table" author="Tulush">
        <createTable tableName="notified_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="notification_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_read" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="add-foreign-key-user-id" author="Tulush">
        <addForeignKeyConstraint
                baseTableName="notified_users"
                baseColumnNames="user_id"
                constraintName="fk_notified_users_user_id"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>


    <changeSet id="add-foreign-key-notification-id" author="Tulush">
        <addForeignKeyConstraint
                baseTableName="notified_users"
                baseColumnNames="notification_id"
                constraintName="fk_notified_users_notification_id"
                referencedTableName="notifications"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>

    <changeSet id="create-notification-sources-table" author="Tulush">
        <createTable tableName="notification_sources">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source" type="VARCHAR(255)">
<!--            <column name="source" type="notification_source_type">-->
                <constraints nullable="false"/>
            </column>
            <column name="en_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ua_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-notification-source" author="Tulush">
        <addForeignKeyConstraint
                baseTableName="notifications"
                baseColumnNames="source_id"
                constraintName="fk_notification_source"
                referencedTableName="notification_sources"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>
</databaseChangeLog>