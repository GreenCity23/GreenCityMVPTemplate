<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="create-users-friends-table" author="your-name">
        <createTable tableName="users_friends">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="friend_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="users_friends" constraintName="fk_user"
                                 referencedColumnNames="id" referencedTableName="users"/>
        <addForeignKeyConstraint baseColumnNames="friend_id" baseTableName="users_friends" constraintName="fk_friend"
                                 referencedColumnNames="id" referencedTableName="users"/>
        <createIndex indexName="idx_user_friend" tableName="users_friends">
            <column name="user_id" />
            <column name="friend_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>