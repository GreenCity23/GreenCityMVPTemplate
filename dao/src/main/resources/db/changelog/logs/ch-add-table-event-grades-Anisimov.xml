<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-events-grades-table" author="your-name">
        <createTable tableName="events_grades">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="grade" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="events_grades" baseColumnNames="user_id"
                                 constraintName="fk_events_grades_user"
                                 referencedTableName="users" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="events_grades" baseColumnNames="event_id"
                                 constraintName="fk_events_grades_event"
                                 referencedTableName="events" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>