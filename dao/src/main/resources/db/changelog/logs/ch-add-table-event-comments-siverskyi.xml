<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1696353707807-56" author="Vladyslav Siverskyi">
        <createTable tableName="event_comment_users_liked">
            <column name="event_comment_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_comment_users_liked"/>
            </column>
            <column name="users_liked_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_comment_users_liked"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1696353707807-57" author="Vladyslav Siverskyi">
        <createTable tableName="events_comments">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_events_comments"/>
            </column>
            <column name="text" type="VARCHAR(8000)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="modified_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="parent_comment_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT"/>
            <column name="event_id" type="BIGINT"/>
            <column name="deleted" type="BOOLEAN"/>
        </createTable>
    </changeSet>
</databaseChangeLog>